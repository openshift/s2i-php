{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "Web-Wordpress-Mysql",
        "annotations": {
            "openshift.io/display-name": "Wordpress con mysql",
            "description": "Creamos la imagen mysql y de wordpress a partir de software collection. Después desplegamos.",
            "tags": "wordpress,mysql",
            "iconClass": "icon-wordpress"
        },
        "labels": {
            "template": "wordpress-mysql"
        }
    },
    "parameters": [
        {
            "name": "APP_NAME",
            "description": "Nombre de la aplicación.",
            "value": "web"
        },
        {
            "name": "WP_SVC",
            "description": "Servicio de wordpress.",
            "value": "wp",
            "required": true
        },
        {
            "name": "MYSQL_SVC",
            "description": "Servicio de mysql.",
            "value": "mysql",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY_MYSQL_URL",
            "description": "The URL of the quickstart Git repository.",
            "value": "https://github.com/samyunodos/mysql-container-1.git",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY_MYSQL_TAG",
            "description": "The tagged version of the source repository to use.",
            "value": "mysql80",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY_WP_URL",
            "description": "The URL of the quickstart Git repository.",
            "value": "https://github.com/samyunodos/s2i-php-container.git",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY_WP_TAG",
            "description": "The tagged version of the source repository to use.",
            "value": "wp",
            "required": true
        },
        {
            "name": "DOCKER_REGISTER",
            "description": "The password for the database user.",
            "value": "docker-registry.default.svc:5000"
        },
        {
            "name": "PROJECT_NAME",
            "description": "Nombre de la aplicación.",
            "value": "image-wp"
        },
        {
            "name": "WP_DB_NAME",
            "description": "Nombre de la base de datos (MYSQL_DATABASE).",
            "value": "wpdb"
        },
        {
            "name": "WP_DB_USER",
            "description": "Usuario de la base de datos (MYSQL_USER).",
            "value": "userdb"
        },
        {
            "name": "WP_DB_PASSWORD",
            "description": "La contraseña del usuario para la base de datos (MYSQL_PASSWORD). Posteriormente la introudciremos como un secreto de kubernetes.",
            "value": "passuserdb"
        },
        {
            "name": "WP_ROOT_DB_PASSWORD",
            "description": "El password del root de msql (MYSQL_ROOT_PASSWORD).  Posteriormente la introudciremos como un secreto de kubernetes.",
            "from": "[a-zA-Z0-9]{12}",
            "value": "passroot"
        },
        {
            "name": "WP_DB_HOST",
            "description": "El nombre del host dónde se encuentra la base de datos. Generalmente suele ser el nombre del servicio que expone la base de datos.",
            "value": "wp-mysql"
        },
        {
            "name": "WP_DB_PORT_NUMBER",
            "description": "El puerto para comunicarse con la base de datos.",
            "value": "3306"
        }
    ],
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-${MYSQL_SVC}-img-0",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${MYSQL_SVC}",
                    "build": "${APP_NAME}-${MYSQL_SVC}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-${MYSQL_SVC}-img-0",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${MYSQL_SVC}",
                    "build": "${APP_NAME}-${MYSQL_SVC}"
                }
            },
            "spec": {
                "failedBuildsHistoryLimit": 5,
                "nodeSelector": null,
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APP_NAME}-${MYSQL_SVC}-img-0:latest"
                    }
                },
                "postCommit": {},
                "resources": {},
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Git",
                    "contextDir": "8.0",
                    "git": {
                        "uri": "${SOURCE_REPOSITORY_MYSQL_URL}",
                        "ref": "${SOURCE_REPOSITORY_MYSQL_TAG}"
                    }
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "forcePull": true,
                        "from": {
                            "kind": "DockerImage",
                            "name": "docker.io/centos/s2i-core-centos7:latest"
                        }
                    }
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-${MYSQL_SVC}-img-1",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${MYSQL_SVC}",
                    "build": "${APP_NAME}-${MYSQL_SVC}",
                    "build1": "${APP_NAME}-${MYSQL_SVC}"
                }
            }
        },
        {
            "apiVersion": "build.openshift.io/v1",
            "kind": "BuildConfig",
            "metadata": {
                "name": "${APP_NAME}-${MYSQL_SVC}-img-1",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${MYSQL_SVC}",
                    "build": "${APP_NAME}-${MYSQL_SVC}",
                    "build1": "${APP_NAME}-${MYSQL_SVC}"
                }
            },
            "spec": {
                "failedBuildsHistoryLimit": 5,
                "nodeSelector": null,
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APP_NAME}-${MYSQL_SVC}-img-1:latest"
                    }
                },
                "postCommit": {},
                "resources": {},
                "runPolicy": "Serial",
                "source": {
                    "contextDir": "test/test-app/mysql-cfg",
                    "git": {
                        "ref": "${SOURCE_REPOSITORY_MYSQL_TAG}",
                        "uri": "${SOURCE_REPOSITORY_MYSQL_URL}"
                    },
                    "type": "Git"
                },
                "type": "Source",
                "strategy": {
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${APP_NAME}-${MYSQL_SVC}-img-0:latest"
                        }
                    }
                },
                "triggers": [
                    {
                        "generic": {
                            "secret": "F-ilfroO9PAhjTRSWX67"
                        },
                        "type": "Generic"
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ]
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-${MYSQL_SVC}",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${MYSQL_SVC}",
                    "build": "${APP_NAME}-${MYSQL_SVC}",
                    "build1": "${APP_NAME}-${MYSQL_SVC}",
                    "deploy": "${APP_NAME}-${MYSQL_SVC}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "3306-tcp",
                        "protocol": "TCP",
                        "port": 3306,
                        "targetPort": 3306
                    }
                ],
                "selector": {
                    "app": "${APP_NAME}",
                    "deployconfig": "${APP_NAME}-${MYSQL_SVC}"
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-${MYSQL_SVC}",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${MYSQL_SVC}",
                    "build": "${APP_NAME}-${MYSQL_SVC}",
                    "build1": "${APP_NAME}-${MYSQL_SVC}",
                    "deploy": "${APP_NAME}-${MYSQL_SVC}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${APP_NAME}",
                    "deployconfig": "${APP_NAME}-${MYSQL_SVC}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${APP_NAME}",
                            "deployconfig": "${APP_NAME}-${MYSQL_SVC}"
                        }
                    },
                    "spec": {
                        "securityContext": {
                            "fsGroup": "0",
                            "runAsUser": "27",
                            "runAsGroup": "0"
                        },
                        "containers": [
                            {
                                "name": "${APP_NAME}-${MYSQL_SVC}",
                                "image": "${DOCKER_REGISTER}/${PROJECT_NAME}/${APP_NAME}-${MYSQL_SVC}-img-1:latest",
                                "args": [
                                    "run-mysqld"
                                ],
                                "ports": [
                                    {
                                        "containerPort": 3306,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "512Mi"
                                    }
                                },
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "/usr/bin/sh",
                                            "-i",
                                            "-c",
                                            "MYSQL_PWD=\"$MYSQL_PASSWORD\" mysqladmin status --user=userdb --host=${HOSTNAME}"
                                        ]
                                    },
                                    "initialDelaySeconds": 20,
                                    "periodSeconds": 20,
                                    "failureThreshold": 30
                                },
                                "startupProbe": {
                                    "exec": {
                                        "command": [
                                            "/usr/bin/sh",
                                            "-i",
                                            "-c",
                                            "MYSQL_PWD=\"$MYSQL_PASSWORD\" mysqladmin status --user=userdb  --host=${HOSTNAME}"
                                        ]
                                    },
                                    "successThreshold": 1,
                                    "failureThreshold": 30,
                                    "periodSeconds": 10
                                },
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/usr/bin/sh",
                                            "-i",
                                            "-c",
                                            "MYSQL_PWD=\"$MYSQL_PASSWORD\" mysqladmin status --user=userdb  --host=${HOSTNAME}"
                                        ]
                                    },
                                    "initialDelaySeconds": 20,
                                    "periodSeconds": 10,
                                    "failureThreshold": 1
                                },
                                "env": [
                                    {
                                        "name": "MYSQL_DATABASE",
                                        "value": "${WP_DB_NAME}"
                                    },
                                    {
                                        "name": "MYSQL_USER",
                                        "value": "${WP_DB_USER}"
                                    },
                                    {
                                        "name": "MYSQL_PASSWORD",
                                        "value": "${WP_DB_PASSWORD}"
                                    },
                                    {
                                        "name": "MYSQL_ROOT_PASSWORD",
                                        "value": "${WP_ROOT_DB_PASSWORD}"
                                    },
                                    {
                                        "name": "MYSQL_HOST",
                                        "value": "localhost"
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-${WP_SVC}-img-0",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${WP_SVC}",
                    "build": "${APP_NAME}-${WP_SVC}"
                }
            }
        },
        {
            "apiVersion": "build.openshift.io/v1",
            "kind": "BuildConfig",
            "metadata": {
                "name": "${APP_NAME}-${WP_SVC}-img-0",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${WP_SVC}",
                    "build": "${APP_NAME}-${WP_SVC}"
                }
            },
            "spec": {
                "failedBuildsHistoryLimit": 5,
                "nodeSelector": null,
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APP_NAME}-${WP_SVC}-img-0:latest"
                    }
                },
                "postCommit": {},
                "resources": {},
                "runPolicy": "Serial",
                "source": {
                    "contextDir": "7.2",
                    "git": {
                        "ref": "wp",
                        "uri": "https://github.com/samyunodos/s2i-php-container.git"
                    },
                    "type": "Git"
                },
                "strategy": {
                    "dockerStrategy": {
                        "forcePull": true,
                        "from": {
                            "kind": "DockerImage",
                            "name": "docker.io/centos/s2i-base-centos7:latest"
                        }
                    },
                    "type": "Docker"
                },
                "triggers": [
                    {
                        "generic": {
                            "secret": "F-ilfroO9PAhjTRSWX67"
                        },
                        "type": "Generic"
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ]
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-${WP_SVC}-img-1",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${WP_SVC}",
                    "build": "${APP_NAME}-${WP_SVC}",
                    "build1": "${APP_NAME}-${WP_SVC}"
                }
            }
        },
        {
            "apiVersion": "build.openshift.io/v1",
            "kind": "BuildConfig",
            "metadata": {
                "name": "${APP_NAME}-${WP_SVC}-img-1",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${WP_SVC}",
                    "build": "${APP_NAME}-${WP_SVC}",
                    "build1": "${APP_NAME}-${WP_SVC}"
                }
            },
            "spec": {
                "failedBuildsHistoryLimit": 5,
                "nodeSelector": null,
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APP_NAME}-${WP_SVC}-img-1:latest"
                    }
                },
                "postCommit": {},
                "resources": {},
                "runPolicy": "Serial",
                "source": {
                    "contextDir": "contexto",
                    "git": {
                        "ref": "wp",
                        "uri": "https://github.com/samyunodos/s2i-php-container.git"
                    },
                    "type": "Git"
                },
                "type": "Source",
                "strategy": {
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "${PROJECT_NAME}",
                            "name": "${APP_NAME}-${WP_SVC}-img-0:latest"
                        }
                    }
                },
                "triggers": [
                    {},
                    {
                        "generic": {
                            "secret": "F-ilfroO9PAhjTRSWX67"
                        },
                        "type": "Generic"
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ]
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-${WP_SVC}",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${WP_SVC}",
                    "build": "${APP_NAME}-${WP_SVC}",
                    "build1": "${APP_NAME}-${WP_SVC}",
                    "deploy": "${APP_NAME}-${WP_SVC}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    },
                    {
                        "name": "8443-tcp",
                        "protocol": "TCP",
                        "port": 8443,
                        "targetPort": 8443
                    }
                ],
                "selector": {
                    "app": "${APP_NAME}",
                    "deployconfig": "${APP_NAME}-${WP_SVC}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-${WP_SVC}",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${WP_SVC}",
                    "build": "${APP_NAME}-${WP_SVC}",
                    "build1": "${APP_NAME}-${WP_SVC}",
                    "deploy": "${APP_NAME}-${WP_SVC}"
                }
            },
            "spec": {
                "port": {
                    "targetPort": "8080-tcp"
                },
                "to": {
                    "kind": "Service",
                    "name": "${APP_NAME}-${WP_SVC}"
                },
                "tls": {
                    "termination": "edge",
                    "insecureEdgeTerminationPolicy": "Allow"
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}-${WP_SVC}",
                "labels": {
                    "app": "${APP_NAME}",
                    "app-service": "${APP_NAME}-${WP_SVC}",
                    "build": "${APP_NAME}-${WP_SVC}",
                    "build1": "${APP_NAME}-${WP_SVC}",
                    "deploy": "${APP_NAME}-${WP_SVC}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${APP_NAME}",
                    "deployconfig": "${APP_NAME}-${WP_SVC}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${APP_NAME}",
                            "deployconfig": "${APP_NAME}-${WP_SVC}"
                        }
                    },
                    "spec": {
                        "securityContext": {
                            "fsGroup": "0",
                            "runAsUser": "1001",
                            "runAsGroup": "0"
                        },
                        "containers": [
                            {
                                "name": "${APP_NAME}-${WP_SVC}",
                                "image": "${DOCKER_REGISTER}/${PROJECT_NAME}/${APP_NAME}-${WP_SVC}-img-1:latest",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 8443,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "512Mi"
                                    }
                                },
                                "env": [
                                    {
                                        "name": "DB_NAME",
                                        "value": "${WP_DB_NAME}"
                                    },
                                    {
                                        "name": "DB_USER",
                                        "value": "${WP_DB_USER}"
                                    },
                                    {
                                        "name": "DB_PASSWORD",
                                        "value": "${WP_DB_PASSWORD}"
                                    },
                                    {
                                        "name": "DB_ROOT_PASSWORD",
                                        "value": "${WP_ROOT_DB_PASSWORD}"
                                    },
                                    {
                                        "name": "DB_HOST",
                                        "value": "${APP_NAME}-${WP_SVC}"
                                    }
                                ]
                            }
                        ],
                        "dnsPolicy": "ClusterFirst",
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": "30"
                    }
                }
            }
        }
    ]
}